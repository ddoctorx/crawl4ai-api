# Application Settings
APP_NAME="Crawl4AI API"
APP_VERSION="0.2.0"
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS Settings
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Browser Configuration
BROWSER_HEADLESS=true
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=800

# Crawler Configuration
PAGE_TIMEOUT=30000
WAIT_FOR_IMAGES=true
MAX_CONCURRENT_CRAWLS=5
CRAWLER_POOL_SIZE=10

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# API Keys (comma-separated for multiple keys)
API_KEY_ENABLED=false
API_KEYS=

# LLM Provider Keys (for intelligent extraction)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Security
SECRET_KEY=your-secret-key-here-please-change-in-production

# Database (Future feature)
DATABASE_URL=

# Redis (For caching and task queue)
REDIS_URL=

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=false